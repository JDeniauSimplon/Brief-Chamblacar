{% extends 'base.html.twig' %}

{% block body %}
	<h1>Créer une règle</h1>

	<div class="ridesContainer">
		<div class="editProfileForm">
			{{ form_start(ruleForm) }}
			{{ form_widget(ruleForm) }}
			<button class="boutonRedirect" type="submit">Créer une règle</button>		
			{{ form_end(ruleForm) }}
		</div>
		{{ form_errors(ruleForm) }}
	
		<table>
		
			<tr>
			
				<th>Titre</th>
				<th>Description</th>
				<th>Auteur</th>
				<th></th>
			</tr>
				
			{% for rule in rules %}
				{% if rule.author == app.user %}
				
					<tr>
						<td>{{ rule.name }}</td>
						<td>{{ rule.description }}</td>
						<td>{{ rule.author.firstName }} {{ rule.author.lastName }}</td>
						<td>

							<a class="boutonRedirectForm" href="{{ path('app_profil_rules_delete', {'id': rule.id}) }}">Supprimer</a>
						</td>
					</tr>
				{% endif %}
			{% endfor %}
		
		</table>
		
		<a class="boutonRedirect" href="{{ path('app_profil') }}#mesRègles">Retour au profil</a>
	</div>
{% endblock %}
